{
  "compileOnSave": true,  
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es2017"
    ],
    "pretty": true,
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}